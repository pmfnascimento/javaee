--download the full version
http://struts.apache.org/download.cgi#struts23153

--move the following jars into the apache server lib
1) asm.x.x.jar
2) asm-commons-x.x.jar
3) asm-tree-3.3.jar
4) commons-fileupload-x.x.jar
5) commons-io-x.x.x.jar
6) commons-lang3-x.x.jar
7) commons-logging-1.1.3.jar
8) commons-logging-api-1.1.jar
9) freemarker-x.x.x.jar
10) javassist-x.x.x.x.jar
11) ognl-x.x.x.jar
12) struts2-core-x.x.x.x.jar
13) struts2-dojo-plugin-x.x.x.x.jar
13) xwork-core-x.x.x.x.jar

--reference the libraries in the build path of the project

--add the filter to the web.xml
<filter>
  	<filter-name>struts2</filter-name>
  	<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>struts2</filter-name>
  	<url-pattern>/*</url-pattern>
</filter-mapping>

--create actions and map the actions in struts.xml
<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
<struts>  
	<constant name="struts.devMode" value="true" />
    <package name="WorldManagerWithStruts" extends="struts-default">  
        <action name="Home">
        	<result>/index.jsp</result>
        </action>
        
        <action name="Login">
        	<result>/login.jsp</result>
        </action>
        <action name="LoginUser" class="com.worldmanager.actions.LoginUserAction">  
            <result name="success">index.jsp</result>  
            <result name="error">loginError.jsp</result>  
            <result name="input">login.jsp</result>
        </action>  
    	
    	<action name="SignOut">
    		<result>/signout.do</result>
    	</action>
    	
    	<action name="ClearUserData">
    		<result>/invalidatesessionandremovecookies.do</result>
    	</action>

    </package>  
</struts>  
